{
  "name": "@apps/api",
  "version": "1.0.50",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target=bun ./src/index.ts --outfile ./dist/api",
    "start": "bun run src/index.ts",
    "auth:generate": "bunx --bun @better-auth/cli@latest generate --config=./src/config/auth.ts --output=./src/database/schemas/auth.ts",
    "db:generate": "bunx --bun drizzle-kit generate",
    "db:push": "bunx --bun drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "bunx --bun drizzle-kit migrate",
    "health-check": "bun run scripts/health-check.ts",
    "lint": "echo \"Add ESLint when needed\"",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.5",
    "@libsql/client": "^0.15.15",
    "@sinclair/typebox": "^0.34.41",
    "better-auth": "^1.3.12",
    "drizzle-orm": "^0.44.5",
    "elysia": "latest",
    "typebox": "^1.0.11"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.31.4"
  },
  "module": "src/index.js"
}
