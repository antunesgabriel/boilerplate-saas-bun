{
  "name": "boilerplate-saas-bun",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dev:site": "turbo run dev --filter=@apps/site --filter=@apps/api --no-cache",
    "dev:api": "turbo run dev --filter=@apps/api --no-cache",
    "dev:client": "turbo run dev --filter=@apps/client --no-cache",
    "turso:local": "turso dev --db-file ./apps/api/local.db",
    "ui:add": "cd packages/ui && bunx shadcn@latest add"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "shadcn": "^3.5.0",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "react-hook-form": "^7.63.0",
    "zod": "^4.1.11"
  }
}
